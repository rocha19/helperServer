{
  "name": "confectionery-system",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "author": "Marcelo Rocha",
  "bin": {
    "execute": "dist/main/server.js"
  },
  "pkg": {
    "scripts": [
      "dist/**/*.js"
    ],
    "asserts": [
      "node_modules/@prisma/cli", 
      "node_modules/.prisma/client/*.node"
    ],
    "targets": [
      "node16-win-x64"
    ],
    "outputPath": "."
  },
  "scripts": {
    "start": "node dist/main/server.js",
    "build": "rimraf dist && tsc --project tsconfig-build.json && tsc-alias -p tsconfig-build.json",
    "dev": "tsx watch --no-cache --clear-screen=false src/main/server",
    "migrate": "prisma migrate dev",
    "test": "vitest --segfault-retry=3",
    "test-unit": "vitest -c vite.config.unit.ts",
    "test-json": "vitest --reporter json",
    "test-integration": "vitest -c vite.config.integration.ts",
    "test-coverage": "vitest run --coverage",
    "test:ui": "vitest --ui",
    "lint": "eslint -c './.eslintrc' --fix './src/**/*.ts'",
    "lint-fix": "eslint . --ext .ts --fix",
    "prepare": "husky install",
    "check-build": "tsc --project tsconfig.typeCheckJs.json && ./node_modules/.bin/tsc",
    "test:types": "tsc --noEmit",
    "csvtojson": "tsx --no-cache --clear-screen=false src/shared/utils/parse-csv-to-json/csv-to-json.ts",
    "tsnd": "ts-node-dev -r tsconfig-paths/register --inspect --transpile-only --respawn --exit-child --watch src --ignore-watch node_modules src/main/server.ts",
    "ngrok": "ngrok http 5000",
    "package": "pkg ."
  },
  "dependencies": {
    "@prisma/client": "^4.9.0",
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "express-async-errors": "^3.1.1",
    "jsonwebtoken": "^8.5.1",
    "module-alias": "^2.2.2",
    "node-2fa": "^2.0.3",
    "pkg": "^5.8.0",
    "qr-image": "^3.2.0",
    "sqlite": "^4.1.2",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.4.2",
    "@commitlint/config-conventional": "^17.4.2",
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.15",
    "@types/module-alias": "^2.0.1",
    "@types/morgan": "^1.9.4",
    "@types/node": "^18.11.18",
    "@types/qr-image": "^3.2.5",
    "@types/supertest": "^2.0.12",
    "@types/uuid": "^8.3.4",
    "@typescript-eslint/eslint-plugin": "^5.49.0",
    "@typescript-eslint/parser": "^5.49.0",
    "@vitest/coverage-c8": "^0.25.8",
    "@vitest/ui": "^0.25.8",
    "eslint": "^8.32.0",
    "eslint-config-prettier": "8.5.0",
    "eslint-config-standard": "^17.0.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-n": "^15.6.1",
    "eslint-plugin-prettier": "4.2.1",
    "eslint-plugin-promise": "^6.1.1",
    "git-commit-msg-linter": "^4.5.0",
    "husky": "^8.0.3",
    "lint-staged": "^13.1.0",
    "morgan": "^1.10.0",
    "prettier": "^2.8.3",
    "prisma": "^4.9.0",
    "rimraf": "^3.0.2",
    "supertest": "^6.3.3",
    "tsc-alias": "^1.8.2",
    "tsconfig-paths": "^4.1.2",
    "tsx": "^3.12.2",
    "typescript": "^4.9.4",
    "vite": "^3.2.5",
    "vitest": "^0.28.1",
    "vitest-mock-extended": "^1.0.8"
  },
  "prisma": {
    "schema": "./src/infra/database/prisma/schema.prisma",
    "seed": "tsx ./src/infra/database/prisma/seeds/seed.ts"
  },
  "description": "",
  "directories": {
    "test": "test"
  },
  "_moduleAliases": {
    "@": "src"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn lint-fix",
      "pre-push": "yarn test"
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/rocha19/confectionery-system.git"
  },
  "keywords": [],
  "bugs": {
    "url": "https://github.com/rocha19/confectionery-system.git"
  },
  "homepage": "https://github.com/rocha19/confectionery-system.git"
}
